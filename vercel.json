{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "cleanDistDir": true
      }
    }
  ],
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    { 
      "source": "/(.*)",
      "destination": "/index.html",
      "headers": {
        "Cache-Control": "no-cache"
      }
    }
  ]
}